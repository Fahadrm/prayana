<odoo>
<data>
<record id="res_config_settings_crm_inherit_form" model="ir.ui.view">
	<field name="name">res.config.settings.inherit.form</field>
	<field name="model">res.config.settings</field>
	<field name="inherit_id" ref="crm.res_config_settings_view_form" />
	<field name="arch" type="xml">
		<xpath expr="//div[@id='crm_lead']" position="after">
			<div class="mt16">
				<field name="user_id" class="oe_inline" placeholder="Sales Person" widget="many2one_avatar_user"/>
			</div>
		</xpath>
	</field>
</record>
</data>
</odoo>